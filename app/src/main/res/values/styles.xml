<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginHorizontal">@dimen/edge</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cornerRadius">@dimen/edge</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsItem">
        <item name="android:paddingHorizontal">@dimen/edge</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>