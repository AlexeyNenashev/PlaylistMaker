<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginHorizontal">@dimen/edge</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="cornerRadius">@dimen/edge</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsItem">
        <item name="android:paddingHorizontal">@dimen/edge</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/MyPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyNegativeButton</item>
    </style>

    <style name="MyPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="MyNegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="roundedImageForCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundedImageForBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

</resources>